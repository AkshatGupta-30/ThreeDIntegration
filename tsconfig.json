{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-native",
    "types": ["react-native", "jest"],
    "typeRoots": ["./src/@types/", "node"],
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@config/*": ["src/config/*"],
      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],
      "@navigation/*": ["src/navigation/*"],
      "@network/*": ["src/network/*"],
      "@screens/*": ["src/screens/*"],
      "@store": ["src/store"],
      "@store/*": ["src/store/*"],
      "@themes": ["src/themes"],
      "@themes/*": ["src/themes/*"],
      "@utility/*": ["src/utility/*"]
    }
  }
}
